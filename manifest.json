{
  "manifest_version": 3,
  "name": "Memescope Trench Tool",
  "version": "1.0",
  "description": "Efficiently scan for copycat tokens on Photon Memescope",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tinyastro.io/*",
        "*://photon-sol.tinyastro.io/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}